<Window x:Class="mya.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mya"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800" Icon="pic/адщцукы.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="IdText" Grid.Column="1" VerticalAlignment="Center" FontSize="20"   MaxLength="15"/>
        <PasswordBox x:Name="PasswordText" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="20"  MaxLength="15"/>
        <Button x:Name="LogInButton" Click="LogInButton_Click" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Войти"/>
    </Grid>
</Window>
